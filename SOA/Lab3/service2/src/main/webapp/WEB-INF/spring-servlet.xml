<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- Enable Spring MVC annotations (@Controller, @RequestMapping, etc.) -->
    <mvc:annotation-driven/>

    <!-- Component scanning for Controllers and other components -->
    <context:component-scan base-package="dev"/>

    <!-- View resolver configuration is not needed since we are only working with REST API -->
</beans>